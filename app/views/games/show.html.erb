<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
 
  <div class="game-container">
    <h1>Have Fun</h1>
  <table class="chess-board">
    <tbody>
      <% 8.downto(1) do |row| %>
        <tr>
          <th></th>
          <% 1.upto(8) do |col| %>
            <% if row % 2 != 0 %>
              <td class="<%= cycle('dark', 'light') %>">
            <% else %>
              <td class="<%= cycle('light', 'dark') %>">
            <% end %>
              <% @pieces.detect do |piece| %>
                <% if piece.x_position == col && piece.y_position == row %>
                  <div class="piece", style="color:red"><%= piece.type %></div>
                
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
     <br />
<a href="/games/show">Sign In</a>
  </div>
</div>